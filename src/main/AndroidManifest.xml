        </activity>

        <!--入库-->
        <activity
            android:name=".activity.InActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--出库列表-->
        <activity
            android:name=".activity.OutListActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--出库-->
        <activity
            android:name=".activity.OutActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--扫描-->
        <activity
            android:name=".activity.ScannerActivity"
            android:screenOrientation="portrait">

        </activity>
        <!--设置-->
        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--查询-->
        <activity
            android:name=".activity.QueryActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--盘点-->
        <activity
            android:name=".activity.PdActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">

        </activity>

        <!--盘点查询-->
        <activity
            android:name=".activity.PdListActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--盘点查询-->
