<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/act_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_sph"
            style="@style/textStyle"
            android:layout_centerVertical="true"
            android:text="单据号"/>

        <ImageButton
            android:id="@+id/out_ib_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_sm"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/out_ed_dh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/out_ib_sm"
            android:layout_toRightOf="@id/tv_sph"
            android:background="@drawable/bg_ed_shape"
            android:hint="请输入单据号"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/textSize"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/out_tv_spsl"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/act_margin"
            android:layout_weight="1"
            android:text="商品数量"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/act_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/out_tv_qrsl"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:text="确认数量"/>

            <TextView
                android:id="@+id/out_tv_qrsl_sl"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:text=""/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>