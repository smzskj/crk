<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/act_padding">

    <TextView
        android:id="@+id/out_item_tv_djhm"
        style="@style/textStyle"
        android:text="单据号码" />

    <TextView
        android:id="@+id/out_item_tv_bh"
        style="@style/textStyle"
        android:text="编号" />

    <TextView
        android:id="@+id/out_item_tv_pch"
        style="@style/textStyle"
        android:text="批次号" />

    <TextView
        android:id="@+id/out_item_tv_spmc"
        style="@style/textStyle"
        android:text="商品名称" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/out_item_tv_dw"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="单位" />

        <TextView
            android:id="@+id/out_item_tv_sl"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="数量" />

    </LinearLayout>

    <TextView
        android:id="@+id/out_item_tv_zy"
        style="@style/textStyle"
        android:text="摘要" />

    <TextView
        android:id="@+id/out_item_tv_kfmc"
        style="@style/textStyle"
        android:text="库房名称" />

    <TextView
        android:id="@+id/out_item_tv_thdd"
        style="@style/textStyle"
        android:text="提货地点" />

    <TextView
        android:id="@+id/out_item_tv_thrq"
        style="@style/textStyle"
        android:text="提货日期" />

</LinearLayout>